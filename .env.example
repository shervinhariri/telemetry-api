# Telemetry API Production Configuration
# Copy this file to .env and update values

# API Configuration
API_KEY=CHANGE_ME
API_IMAGE=shvin/telemetry-api:latest

# Domain Configuration
DOMAIN=api.yourdomain.com

# GeoIP Database Paths
GEOIP_DB_CITY=/data/GeoLite2-City.mmdb
GEOIP_DB_ASN=/data/GeoLite2-ASN.mmdb

# Threat Intelligence
THREATLIST_CSV=/data/threats.csv

# Splunk HEC Configuration
SPLUNK_HEC_URL=https://splunk.example.com:8088/services/collector
SPLUNK_HEC_TOKEN=changeme

# Elasticsearch Configuration
ELASTIC_URL=https://elastic.example.com:9200
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=changeme

# Basic Auth for Metrics Endpoint
BASIC_AUTH_USER=metrics
BASIC_AUTH_PASS=changeme

# Timezone
TZ=UTC

# Rate Limiting Configuration
RATE_LIMIT_INGEST_RPM=120
RATE_LIMIT_DEFAULT_RPM=600
